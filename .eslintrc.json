{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["//"]
        }
      }
    ],
    "no-useless-catch": "off",
    "class-methods-use-this": "off",
    "max-classes-per-file": "off",
    "no-unused-vars": 0
  }
}
